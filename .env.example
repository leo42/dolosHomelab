# Dolos Homelab Environment Configuration
# Copy this file to .env.mainnet and .env.preprod and customize as needed

# Cardano Node Docker Image
CARDANO_NODE_IMAGE=inputoutput/cardano-node:latest

# Mainnet Configuration
MAINNET_PORT=3001
MAINNET_WEB_PORT=8080
MAINNET_MEMORY_LIMIT=4G
MAINNET_MEMORY_RESERVATION=2G

# Preprod Configuration
PREPROD_PORT=3002
PREPROD_WEB_PORT=8081
PREPROD_MEMORY_LIMIT=2G
PREPROD_MEMORY_RESERVATION=1G

# Paths (relative to docker-compose.yml location)
CONFIG_DIR=./config
DATA_DIR=./data
